import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Qual o valor do produto que você deseja comprar?");
        double produtoV = sc.nextDouble();
        
        double desconto = produtoV * 0.12;
        double produtoComDesconto = produtoV - desconto;
        
        System.out.println("O valor do desconto é de R$" + desconto);
        System.out.println("O preço do produto com desconto é de R$" + produtoComDesconto);
        
        sc.close();
    }
}
